@model SMSWEBAPI.Models.StudentAttendance

@{
    ViewData["Title"] = "Add Attendance";
}

<h2>Add Attendance</h2>

<form asp-action="AddAttendance" method="post">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <input asp-for="StudentId" class="form-control" />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassId" class="control-label"></label>
        <input asp-for="ClassId" class="form-control" />
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="true">Present</option>
            <option value="false">Absent</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Attendance" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
