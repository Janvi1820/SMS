@model TeacherLeave

<div class="container-fluid mt-5">
    <!-- Card for Leave Form -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title fw-semibold mb-0">Leave Form</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <table class="table">
                            <tbody>
                                <!-- Leave Type -->
                                <tr>
                                    <td class="form-label">Select Type of Leave</td>
                                    <td>
                                        <select class="form-control" asp-for="Leavetype">
                                            <option value="1">Sick Leave</option>
                                            <option value="2">Paid Leave</option>
                                            <option value="3">Casual Leave</option>
                                        </select>
                                    </td>
                                </tr>

                                <!-- Start Date and End Date -->
                                <tr>
                                    <td class="form-label">Select Start Date</td>
                                    <td>
                                        <input type="date" class="form-control" asp-for="StartDate" id="StartDate">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="form-label">Select End Date</td>
                                    <td>
                                        <input type="date" class="form-control" asp-for="EndDate" id="EndDate">
                                    </td>
                                </tr>

                                <!-- Leave Reason -->
                                <tr>
                                    <td class="form-label">Reason For The Leave</td>
                                    <td>
                                        <textarea class="form-control" rows="3" asp-for="LeaveReason" id="LeaveReason"></textarea>
                                    </td>
                                </tr>

                                <!-- Submit Button -->
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
